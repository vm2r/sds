#!/usr/bin/env python3
import os
import sys

# Add the current directory to sys.path so we can import sds_pkg
# This is useful for development and when running from the source tree
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

try:
    from main import main
except ImportError as e:
    print(f"Error: Could not import sds_pkg. {e}")
    sys.exit(1)

if __name__ == "__main__":
    main()
